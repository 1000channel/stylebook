    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="weight-bold-text">あなたの詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          性別
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>
    <%# /商品の詳細 %>

    <%# 配送について %>
    <div class="items-detail">
      <div class="weight-bold-text question-text">
        <span>ヘアスタイルの詳細</span>
        <a class="question" href="#">?</a>
      </div>
      <div class="form">
        <div class="weight-bold-text">
          髪の長さ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:hair_length_id, HairLength.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
        <div class="weight-bold-text">
          パーマの状態
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:hair_parm_id, HairParm.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
        <div class="weight-bold-text">
          カラー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:hair_color_id, HairColor.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
        <div class="weight-bold-text">
          ショップ名
          <span class="indispensable">※任意</span>
        </div>
        <%= f.collection_select(:shop_id, Shop.all, :id, :shop_name, {:include_blank => "---"}, {class:"select-box", id:"item-prefecture"}) %>
      </div>
    </div>
